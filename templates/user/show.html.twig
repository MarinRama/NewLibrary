{% extends 'base.html.twig' %}

{% block title %}{{ app.user.login }}'s Account{% endblock %}

{% block body %}
    <h1>{{ app.user.login }}'s Account</h1>
    <tr>
        <img alt="Image" src="{{ user.pictureFilename }}" class="avatar rounded avatar-sm" style="width: 10em;">
    </tr>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ user.login }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('user_index') }}" class="btn btn-link" >back to list</a>
    {% endif %}

    <a href="{{ path('edit_user', {'id': user.id}) }}" class="btn btn-primary" >edit</a>

    {{ include('user/_delete_form.html.twig') }}




{% endblock %}
