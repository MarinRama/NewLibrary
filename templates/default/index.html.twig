{% extends 'base.html.twig' %}

{# Affiche une liste de tout les articles #}
{% block title %}Accueil{% endblock %}

{% block body %}
    <style>html{margin-top:0 !important;}</style>
    <h1>Accueil</h1>

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <span class="text-muted text-small"></span>
                    </div>
                    <form class="d-flex align-items-center">
                        <span class="mr-2 text-muted text-small text-nowrap">Sort by:</span>
                        <select class="custom-select">
                            <option value="alpha">Alphabetical</option>
                            <option value="old-new" selected="">Newest</option>
                            <option value="new-old">Oldest</option>
                        </select>
                    </form>
                </div>
            </div>
            <!--end of col-->
        </div>
        <!--end of row-->
        <div class="row">
            <div class="col">
                <table class="table table-borderless table-hover align-items-center">
                    <thead>
                        <tr>
                            <th scope="col">Couverture</th>
                            <th scope="col">Titre</th>
                            <th scope="col">Author</th>
                            <th scope="col">Date Cr√©ation</th>
                            <th scope="col">Date Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                            <tr class="bg-white">
                                <th scope="row">
                                    <a class="media align-items-center" href="{# { path('vue_article', {'id':article.id}) }#}"></a>
                                </th>
                            </tr>
                            <tr class="bg-white">
                                <th scope="row">
                                    <a class="media align-items-center" href="{{ path('vue_article', {'id':article.id}) }}">
                                        <div class="media-body">
                                        </div>
                                        <img alt="Image" src="{{ article.image }}" class="avatar rounded avatar-sm" style="width: 10em;">
                                    </a>
                                </th>
                                <td><span class="h6 mb-0">{{ article.titre }}</span></td>
                                <td>{{ article.author.login }}</td>
                                <td>{{ article.dateCreation|date('d/m/Y ') }}</td>
                                <td>{{ article.dateUpdate|date('d/m/Y ') }}</td>
                            </tr>
                            <tr class="table-divider">
                                <th></th>
                                <td></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <!--end of col-->
        </div>
        <!--end of row-->
    </div>

{% endblock %}